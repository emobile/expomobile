<%= render "layouts/first_tab" %>

<div class="CSSTableGenerator" >
  <table >
    <tr>
      <td>
        <b><%= @exposition.name %>
      </td>
    </tr>
    <tr>
      <td>
        <b><%= t'exposition.stand' %>:<%= @exposition.stand.name %>
      </td>
    </tr>
    <tr>
      <td>
        <b><%= t'exposition.exposition_key' %>:<%= @exposition.exposition_key %><br/><%= link_to t(:qr_code), qr_generator_generate_qr_path(:key => @exposition.exposition_key), :class => "qr_code" %>
      </td>
    </tr>
    <tr>
      <td>
        <b><%= t'exposition.exhibitor' %>:<%= @exposition.exhibitor.social_reason %>
      </td>
    </tr>
    <tr>
      <td>
        <b><%= t'exposition.start_date' %>:<%= (@exposition.start_date.nil?)? "": @exposition.start_date.strftime("%d/%m/%Y %I:%M%p") %>
      </td>
    </tr>
    <tr>
      <td>
        <b><%= t'exposition.end_date' %>:<%= (@exposition.end_date.nil?)? "": @exposition.end_date.strftime("%d/%m/%Y %I:%M%p") %>
      </td>
    </tr>
  </table>
</div>


<%= render "layouts/action_links" %>